page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: 100rpx;
  /* 为底部tab-bar留出空间 */
  box-sizing: border-box;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 0 0 20rpx 20rpx;
}

/* 顶部 tab 样式 */
.top-tabs {
  display: flex;
  flex-direction: row;
  background: #f7f7f7;
  padding: 10rpx 0;
  margin: 0 20rpx;
  border-radius: 12rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  color: #888;
  border-bottom: 4rpx solid transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab.active {
  color: #2a6ae9;
  border-bottom: 4rpx solid #2a6ae9;
  background: #eaf2ff;
  border-radius: 12rpx 12rpx 0 0;
}

.tab .tab-text {
  font-family: Inter;
  font-weight: 300;
  font-size: 10.1px;
  line-height: 100%;
  letter-spacing: 0%;
  vertical-align: middle;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  border-radius: 50%;
}

/* 功能区块样式 */
.feature-list {
  margin-top: 20rpx;
  /* padding: 0 20rpx; */
}

.feature {
  width: 100%;
  /* margin-bottom: 20rpx; */
  border-radius: 12rpx;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #eee;
  z-index: 999;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  color: #888;
}

.tab-item.active {
  color: #222;
}

.tab-item .tab-icon {
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto 4rpx;
}
.feature-list {
  margin-top: 30rpx;
  /* padding-right: 20rpx;
  padding: 0 20rpx; */
  overflow-y: auto;
}

.feature-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-block {
  margin-bottom: 10rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.feature-img {
  padding-right: 4rpx;
  border-radius: 12rpx;
}