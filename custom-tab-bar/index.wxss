.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #eee;
  z-index: 999;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  color: #888;
  transition: all 0.3s;
}

.tab-item.active {
  color: #fff;
  background: #000;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.tab-item .tab-icon {
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto 4rpx;
} 